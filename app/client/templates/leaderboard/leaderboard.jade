template(name='Leaderboard')
  if Template.subscriptionsReady
    table.table.table-striped
      thead
        tr
          th Player
          th Team Name
          th Teams
          th Wins
          th Games
          th +/-
      tbody
        +each poolUserTeams
          tr
            td= userTeamName
            td= userTeamName
            td= teamSummary
            td= totalWins
            td= totalGames
            td= totalPlusMinus
  else
    div Loading...
