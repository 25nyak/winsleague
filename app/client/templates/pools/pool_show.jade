template(name="poolShow")
  h2 Pool

  if Template.subscriptionsReady
    table.table.table-striped
      thead
        tr
          th Player
          th Team Name
          th Teams
          th Wins
          th Games
          th +/-
      tbody
        +each poolUserTeam in poolUserTeams
          tr
            td= poolUserTeam.userTeamName
            td= poolUserTeam.userTeamName
            td= poolUserTeam.teamSummary
            td= poolUserTeam.totalWins
            td= poolUserTeam.totalGames
            td= poolUserTeam.totalPlusMinus
  else
    div Loading...
