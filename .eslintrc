{
  "extends": [
    "airbnb/base",
    "plugin:meteor/recommended"
  ],
  "env": {
    "browser": true,
    "jasmine": true,
    "meteor": true,
    "mocha": true,
    "node": true
  },
  "plugins": [
    "meteor"
  ],
  "rules": {
    "no-underscore-dangle": 0,
    "meteor/eventmap-params": [
      2, { "templateInstanceParamName": "instance" }
    ],
    "import/no-unresolved": [
      2, { "ignore": ["^meteor/"] }
    ],
    "meteor/template-names": [2, "snake-case"] // this is what the Meteor Guide prefers
  }
  /* disabled because we now use import
  "globals": {
    "AccountsTemplates": false,
    "Games": true,
    "LeaguePickExpectedWins": true,
    "LeagueTeams": true,
    "Leagues": true,
    "log": false,
    "Mailer": false,
    "Migrations": false,
    "Modules": false,
    "moment": false,
    "PoolTeamPicks": true,
    "PoolTeams": true,
    "Pools": true,
    "Routes": true,
    "SeasonLeagueTeams": true,
    "Seasons": true,
    "SimpleSchema": false,
    "SyncedCron": false,
    "Templates": true,
    "TemplateHelpers": true
  }
  */
}
